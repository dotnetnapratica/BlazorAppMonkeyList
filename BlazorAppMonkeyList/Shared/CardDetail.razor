<div class="card" style="width: 18rem; margin-top: 10px; margin-left: 30px">
  <img class="card-img-top" src="@Monkey.Image" alt="Card image cap">
  <div class="card-body">
    <p class="card-text"><b>@Monkey.Name | @Monkey.Location</b></p>
     <p class="card-text">@Monkey.Details</p>
  </div>
</div>

@code {
    [Parameter]
    public Models.Monkey Monkey { get; set; }
}
